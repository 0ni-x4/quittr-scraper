{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "noEmit": false,
    "allowJs": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "lib": ["es2020", "dom"],
    "resolveJsonModule": true
  },
  "include": ["src/scripts/**/*", "src/subagents/**/*", "src/testAgents.ts", "src/stores/**/*"],
  "exclude": ["node_modules"]
} 