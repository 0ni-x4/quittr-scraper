{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/electron/**/*",
    "src/subagents/**/*",
    "src/types/**/*",
    "src/test-scraper.ts",
    "src/testAgents.ts"
  ],
  "exclude": [
    "node_modules",
    "src/components/**/*",
    "src/pages/**/*",
    "src/stores/**/*",
    "src/App.tsx",
    "src/main.tsx",
    "src/scripts/**/*"
  ]
} 